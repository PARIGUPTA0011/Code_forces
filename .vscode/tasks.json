{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "build and run C++",
		"type": "shell",
		"command": "g++",
		"args": [
		  "${file}",
		  "-o",
		  "${fileDirname}/${fileBasenameNoExtension}.exe"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Compiling C++ file",
		"dependsOn": "run C++ executable"
	  },
	  {
		"label": "run C++ executable",
		"type": "shell",
		"command": "${fileDirname}/${fileBasenameNoExtension}.exe",
		"group": "build",
		"problemMatcher": []
	  }
	]
  }
  